<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Send debug messages to System.out -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n
			</pattern>
		</encoder>
	</appender>


	<appender name="AzLogAnalytics" class="com.azloganalytics.logback.LogbackAzLogAnalyticsAppender">
		<workspaceId>YOUR_WORKSPACE_ID</workspaceId>
		<sharedKey>YOUR_SHARED_KEY</sharedKey>
		<logType>YOUR_LOG_TYPE</logType>
	</appender>

	<!-- Currently recommended way of using Slack appender -->
	<appender name="ASYNC_AzLogAnalytics" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="AzLogAnalytics" />
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>

	<root>
		<level value="ALL" />
		<appender-ref ref="AzLogAnalytics" />
	</root>

	<!-- By default, the level of the root level is set to DEBUG -->
	<!-- <root level="ERROR"> <appender-ref ref="STDOUT" /> </root> -->
</configuration>